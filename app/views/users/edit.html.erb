<main class="container">
  <%= form_with model: current_user, url: profile_path, local: true, class: 'edit_profile' do |form| %>
    <h1>Edit your profile</h1>

    <div class="field">
      <%= form.file_field :avatar %>
    </div>

    <div class="field">
      <%= form.text_field :name, placeholder: 'Name' %>
    </div>    

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
</main>