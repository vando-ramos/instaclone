<%= form_with model: post, class: 'new-post' do |form| %>
  <h1>New post</h1>

  <div class='field'>
    <%= form.file_field :photo %>
  </div>

  <div class='field'>
    <%= form.text_field :description, placeholder: 'Description' %>
  </div>

  <div class='actions'>
    <%= form.submit %>
  </div>
<% end %>
